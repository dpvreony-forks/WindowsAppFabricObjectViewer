<Window
    x:Class="Shell.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow"
    Height="350"
    Width="525">

    <DockPanel>
        <Menu
            DockPanel.Dock="Top"
            IsMainMenu="True">
            <MenuItem
                Header="_File">
                <MenuItem
                    Header="S_ettings" />
                <MenuItem
                    Header="E_xit" />
            </MenuItem>
            <MenuItem
                Header="_Help" />
        </Menu>

        <Grid
            DockPanel.Dock="Bottom">
            <ContentControl
                x:Name="ContentRegion" />
        </Grid>
    </DockPanel>
</Window>
